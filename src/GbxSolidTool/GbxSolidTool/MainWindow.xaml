<Window x:Class="GbxSolidTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helix="http://helix-toolkit.org/wpf"
        mc:Ignorable="d"
        Title="GbxSolidTool" Width="1200" Height="750"
        Background="#111"
        >
    <DockPanel LastChildFill="True">

        <!-- Top bar -->
        <Border DockPanel.Dock="Top" Background="#1a1a1a" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Padding="12,6" Margin="0,0,8,0"
                        Content="Open (.3ds/.obj/.stl...)" Click="Open_Click"/>

                <Button Grid.Column="1" Padding="12,6" Margin="0,0,8,0"
                        Content="Clear" Click="Clear_Click"/>

                <CheckBox Grid.Column="2" Margin="0,0,8,0" VerticalAlignment="Center"
                          Content="Wireframe" Foreground="#ddd"
                          Checked="Wireframe_Checked" Unchecked="Wireframe_Unchecked"/>

                <TextBlock Grid.Column="4" VerticalAlignment="Center" Foreground="#bbb" Margin="0,0,8,0"
                           Text="Color:"/>
                <ComboBox Grid.Column="5" Width="140" SelectedIndex="0"
                          SelectionChanged="ColorCombo_SelectionChanged">
                    <ComboBoxItem Content="LightGray"/>
                    <ComboBoxItem Content="White"/>
                    <ComboBoxItem Content="Orange"/>
                    <ComboBoxItem Content="HotPink"/>
                    <ComboBoxItem Content="Cyan"/>
                    <ComboBoxItem Content="Lime"/>
                </ComboBox>

                <TextBlock Grid.Column="7" VerticalAlignment="Center" Foreground="#888"
                           Text="Drag and drop a model into the viewport"/>
            </Grid>
        </Border>

        <!-- Bottom status -->
        <Border DockPanel.Dock="Bottom" Background="#1a1a1a" Padding="8">
            <TextBlock x:Name="StatusText" Foreground="#aaa" Text="Ready."/>
        </Border>

        <!-- Main content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="380"/>
            </Grid.ColumnDefinitions>

            <!-- Viewport -->
            <Border Grid.Column="0" Margin="10" CornerRadius="10"
                    Background="#0f0f0f" BorderBrush="#2a2a2a" BorderThickness="1"
                    AllowDrop="True"
                    DragOver="Viewport_DragOver"
                    Drop="Viewport_Drop">
                <helix:HelixViewport3D x:Name="View3D"
                                      Background="#0f0f0f"
                                      ShowFrameRate="True"
                                      ShowCoordinateSystem="True"
                                      ZoomExtentsWhenLoaded="True"/>
            </Border>

            <!-- Logs -->
            <Border Grid.Column="1" Margin="10,10,10,10" CornerRadius="10"
                    Background="#0f0f0f" BorderBrush="#2a2a2a" BorderThickness="1">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Padding="10,8" Foreground="#ddd"
                               Text="Logs"/>
                    <TextBox x:Name="LogBox"
                             Background="#0f0f0f" Foreground="#cfcfcf"
                             BorderThickness="0"
                             FontFamily="Consolas"
                             FontSize="12"
                             IsReadOnly="True"
                             TextWrapping="NoWrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             />
                </DockPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
