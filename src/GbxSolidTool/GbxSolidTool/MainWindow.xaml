<Window x:Class="GbxSolidTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helix="http://helix-toolkit.org/wpf"
        mc:Ignorable="d"
        Title="GbxSolidTool" Width="1200" Height="750"
        Background="#111">
    <DockPanel LastChildFill="True">

        <!-- Top bar -->
        <Border DockPanel.Dock="Top" Background="#1a1a1a" Padding="10">
            <DockPanel LastChildFill="True">

                <!-- Left buttons -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Button Padding="12,6" Margin="0,0,8,0"
                            Content="Load Template" Click="LoadTemplate_Click"/>

                    <Button Padding="12,6" Margin="0,0,8,0"
                            Content="Open (.3ds)" Click="Open_Click"/>

                    <Button Padding="12,6" Margin="0,0,8,0"
                            Content="Clear" Click="Clear_Click"/>

                    <StackPanel Orientation="Vertical" Margin="0,0,8,0">
                        <Button Padding="12,6"
                                Content="Convert XML" Click="ConvertXml_Click"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                            <CheckBox x:Name="Cb3dsVisual" Content="-v" IsChecked="True" Foreground="#ddd" Margin="0,0,8,0"/>
                            <CheckBox x:Name="Cb3dsSurface" Content="-s" IsChecked="True" Foreground="#ddd"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Padding="12,6" Margin="0,0,8,0"
                            Content="Compile GBX" Click="CompileGbx_Click"/>

                    <Button x:Name="ToggleLogsButton" Padding="12,6" Margin="0,0,8,0"
                            Content="Hide Logs" Click="ToggleLogs_Click"/>

                    <!-- NEW: Open model folder -->
                    <Button Padding="12,6"
                            Content="Open Folder" Click="OpenModelFolder_Click"/>
                </StackPanel>

            </DockPanel>
        </Border>

        <!-- Bottom status -->
        <Border DockPanel.Dock="Bottom" Background="#1a1a1a" Padding="8">
            <TextBlock x:Name="StatusText" Foreground="#aaa" Text="Ready."/>
        </Border>

        <!-- Main content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition x:Name="LogsColumn" Width="380" MinWidth="220"/>
            </Grid.ColumnDefinitions>

            <!-- Viewport -->
            <Border Grid.Column="0" Margin="10" CornerRadius="10"
                    Background="#0f0f0f" BorderBrush="#2a2a2a" BorderThickness="1"
                    AllowDrop="True"
                    DragOver="Viewport_DragOver"
                    Drop="Viewport_Drop">
                <Grid>
                    <helix:HelixViewport3D x:Name="View3D"
                                          Background="#0f0f0f"
                                          ShowFrameRate="True"
                                          ShowCoordinateSystem="True"
                                          ZoomExtentsWhenLoaded="True"/>

                    <!-- Wireframe checkbox (top-left inside viewport) -->
                    <Border HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="10"
                            Padding="6,4"
                            CornerRadius="6"
                            Background="#AA000000">
                        <StackPanel>
                            <CheckBox Content="Wireframe"
                                Foreground="White"
                                Checked="Wireframe_Checked"
                                Unchecked="Wireframe_Unchecked"/>

                            <CheckBox x:Name="FaceOrientationCheckBox"
                                  Content="Face Orientation"
                                  Foreground="White"
                                  Margin="0,6,0,0"
                                  Checked="NormalsCheckBox_Checked"
                                  Unchecked="NormalsCheckBox_Unchecked"/>

                        </StackPanel>
                    </Border>



                    <!-- Overlay message when no model -->
                    <Border x:Name="DropOverlay"
                            Background="#66000000"
                            CornerRadius="12"
                            Padding="18"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="Visible">
                        <TextBlock Text="Drag &amp; drop a .3ds model here&#x0a;or click Open / Load Template"
                                   Foreground="#f0f0f0"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1"
                          Width="6"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="#1a1a1a"
                          ShowsPreview="True"
                          ResizeBehavior="PreviousAndNext"
                          ResizeDirection="Columns"/>

            <!-- Logs -->
            <Border Grid.Column="2" Margin="10,10,10,10" CornerRadius="10"
                    Background="#0f0f0f" BorderBrush="#2a2a2a" BorderThickness="1">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Padding="10,8" Foreground="#ddd"
                               Text="Logs"/>
                    <RichTextBox x:Name="LogBox"
                                 IsReadOnly="True"
                                 Background="#101010"
                                 Foreground="White"
                                 BorderThickness="0"
                                 VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"
                                 FontSize="12"/>
                </DockPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
